<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Контейнер карты с отступом снизу -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp"> <!-- Высота controlPanel -->

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Иконка погоды -->
    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|end"
        android:background="@color/blue_light"
        android:padding="8dp"
        android:src="@drawable/weather"
        android:contentDescription="Погода" />

    <!-- Шкала масштаба (по умолчанию у Google Maps внизу слева, но можно закрепить) -->
    <TextView
        android:id="@+id/scaleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="180dp"
        android:text="Масштаб: 100 м"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:padding="4dp"
        android:elevation="4dp" />

    <!-- Панель управления -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_notify"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="@color/blue"
                android:text="Уведомить о прибытии"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Маршрут: ул. Борисова 3 -> ул. Борисова 32"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</FrameLayout>
