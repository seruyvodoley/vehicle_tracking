<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_gray"
    android:padding="20dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/SelectPhoto" />
        <!-- Камера (иконка) -->
        <ImageView
            android:id="@+id/carImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:src="@drawable/camera"
            android:background="@drawable/circle_background"/>

        <!-- Поле: Car Name -->
        <EditText
            android:id="@+id/carName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите название машины"
            android:padding="12dp"
            android:textSize="16sp"/>

        <!-- Поле: Car Model -->
        <EditText
            android:id="@+id/carModel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите модель машины"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <!-- Поле: Car Number -->
        <EditText
            android:id="@+id/carNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите номер машины"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <!-- Переключатель: Switch On Current Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/carLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Включить текущее местоположение"
                android:textSize="14sp"/>

            <Switch
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Кнопка Upload -->
        <Button
            android:id="@+id/addCar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Загрузить"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

</LinearLayout>
